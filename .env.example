# Maybee Discord Bot Configuration
# Copy this file to .env and fill in your values

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# Database Configuration
DB_USER=your_database_username
DB_PASS=your_database_password
DB_HOST=your_database_host
DB_NAME=your_database_name

# Cache Configuration
CACHE_TTL=300
PERSISTENT_CACHE=true
CACHE_DIR=cache_data

# Performance Configuration
MAX_DB_CONNECTIONS=10
MIN_DB_CONNECTIONS=1
COMMAND_COOLDOWN=5

# Features Configuration
DEBUG=false
LOG_LEVEL=INFO
DEFAULT_LANGUAGE=en

# Security Configuration
RATE_LIMIT_ENABLED=true
GLOBAL_COOLDOWN=1

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=60
METRICS_RETENTION_DAYS=7
EXPORT_METRICS=false

# Web Dashboard Configuration (for web/main.py)
WEB_SECRET_KEY=your_secret_key_here
WEB_DISCORD_CLIENT_ID=your_discord_oauth_client_id
WEB_DISCORD_CLIENT_SECRET=your_discord_oauth_client_secret
WEB_DISCORD_REDIRECT_URI=http://localhost:8000/auth/callback
